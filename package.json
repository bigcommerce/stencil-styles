  },
  "homepage": "https://github.com/bigcommerce/stencil-styles#readme",
  "dependencies": {
    "@bigcommerce/node-sass": "git://github.com/bigcommerce-labs/node-sass.git#v3.5.0",
    "autoprefixer": "^6.7.3",
    "lodash": "^4.17.19",
    "postcss": "^5.2.14"
  },
  "devDependencies": {
    "code": "^4.0.0",
