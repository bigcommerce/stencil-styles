{
  "name": "@bigcommerce/stencil-styles",
  "version": "4.0.0",
  "description": "Compiles SCSS for the Stencil Framework",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run lint && npm run run-tests",
    "lint": "eslint .",
    "run-tests": "lab -t 85 -e 'development' --ignore BigUint64Array,BigInt64Array,BigInt,URL,URLSearchParams,Base64,TextEncoder,TextDecoder,queueMicrotask,Base64,AggregateError,atob,btoa,AbortController,AbortSignal,EventTarget,Event,MessageChannel,MessagePort,MessageEvent,performance",
    "test-cov-html": "lab -r html -o coverage.html"
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bigcommerce/stencil-styles.git"
  },
  "author": "Bigcommerce",
  "license": "BSD-4-Clause",
  "bugs": {
    "url": "https://github.com/bigcommerce/stencil-styles/issues"
  },
  "homepage": "https://github.com/bigcommerce/stencil-styles#readme",
  "files": [
    "LICENSE",
    "README.md",
    "lib/"
  ],
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "lodash": "^4.17.21",
    "node-sass": "^8.0.0",
    "postcss": "^8.4.20",
    "sass": "^1.57.1"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.2",
    "@hapi/lab": "^23.0.0",
    "eslint": "^7.20.0",
    "sinon": "^1.14.1"
  }
}
